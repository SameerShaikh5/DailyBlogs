<%- include('./partials/nav.ejs', {title:"Daily Blogs - Home"}) %>
    <!-- Main Content -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Edit Blog</h1>
                <form action="/posts/edit/<%= post._id %>" method="post" enctype="multipart/form-data">

                    <!-- Title -->
                    <div class="mb-3">
                        <label for="heading" class="form-label">Heading</label>
                        <input type="text" value="<%= post.heading %>" name="heading" id="heading" class="form-control" required>
                    </div>

                    <!-- Subtitle -->
                    <div class="mb-3">
                        <label for="subheading" class="form-label">Subheading</label>
                        <input type="text" value="<%= post.subheading %>" name="subheading" id="subheading" class="form-control" required>
                    </div>

                    <!-- Content -->
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea name="content" id="content" class="form-control" required><%= post.content %></textarea>
                    </div>

                    <!-- Image URL -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="image" id="image" class="form-control" accept=".jpeg, .jpg">
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>